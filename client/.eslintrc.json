{
    "extends": "plugin:vue/essential",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true
    },

    "rules": {
        //"indent": [2, 4],
        "quotes": "off",
        "linebreak-style": ["warn", "unix"],
        "max-len": ["warn", { "code": 120 }],
        "require-jsdoc": 0,
        "comma-dangle": "warn",
        "no-unused-vars": ["error", { "vars": "local", "args": "none" }]
    }
}
